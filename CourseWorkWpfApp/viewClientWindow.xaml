<Window x:Class="CourseWorkWpfApp.viewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkWpfApp"
        mc:Ignorable="d"
        Title="viewClientWindow" Height="466.462" Width="576.154" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="clientDataGrid" Margin="10,34,10,0" ItemsSource="{Binding}" AutoGenerateColumns="False" Height="316" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=surname}" Header="Фамилия" />
                <DataGridTextColumn Binding="{Binding Path=name}" Header="Имя, отчество" />
                <DataGridTextColumn Binding="{Binding Path=sex}" Header="Пол" />
                <DataGridTextColumn Binding="{Binding Path=passp_num}" Header="№ паспорта" />
                <DataGridTextColumn Binding="{Binding Path=address}" Header="Адрес" />
                <DataGridTextColumn Binding="{Binding Path=telephone}" Header="Телефон" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="addClientButton" Content="Добавить" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Width="113" Height="41" Click="addClientButton_Click"/>
        <Button x:Name="deleteClientButton" Content="Удалить" HorizontalAlignment="Left" Margin="259,370,0,0" VerticalAlignment="Top" Width="112" Height="41" Click="deleteClientButton_Click"/>
        <Button x:Name="ascSortClientButton" Content="Asc" Margin="440,370,71,0" VerticalAlignment="Top" Height="41" Click="ascSortClientButton_Click"/>
        <Button x:Name="descSortClientButton" Content="Desc" HorizontalAlignment="Left" Margin="501,370,0,0" VerticalAlignment="Top" Width="57" Height="41" Click="descSortClientButton_Click"/>
        <Button x:Name="saveButton" Content="Сохранить" HorizontalAlignment="Left" Margin="135,370,0,0" Width="113" Click="saveButton_Click" Height="41" VerticalAlignment="Top"/>

    </Grid>
</Window>
