<Window x:Class="CourseWorkWpfApp.mainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkWpfApp"
        mc:Ignorable="d"
        Title="Главное меню" Height="614.802" Width="582.868" Loaded="Window_Loaded">
    <Grid>
        <Menu x:Name="menu" Height="20" VerticalAlignment="Top">
            <MenuItem Header="Файл" ToolTip="Файл">
                <MenuItem Header="Добавить">
                    <MenuItem x:Name="menuAddClient" Header="Добавить клиента" Click="menuAddClient_Click"/>
                    <MenuItem x:Name="menuAddContract" Header="Добавить контракт" Click="menuAddContract_Click"/>
                    <MenuItem x:Name="menuAddCoach" Header="Добавить тренера" Click="menuAddCoach_Click"/>
                    <MenuItem x:Name="menuAddService" Header="Добавить услугу" Click="menuAddService_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="menuFileSave" Header="Сохранить" Click="menuFileSave_Click"/>
                <Separator/>
                <MenuItem x:Name="menuFilePrint" Header="Печать" Click="menuFilePrint_Click"/>
                <Separator/>
                <MenuItem x:Name="menuFileExit" Header="Выход" Click="menuFileExit_Click"/>
            </MenuItem>
            <MenuItem Header="Правка" ToolTip="Правка">
                <MenuItem x:Name="menuEditUndo" Header="Отмена"/>
                <MenuItem x:Name="menuEditRedo" Header="Вернуть"/>
                <Separator/>
                <MenuItem x:Name="menuEditDelete" Header="Удалить"/>
            </MenuItem>
            <MenuItem Header="Просмотр" ToolTip="Просмотр">
                <MenuItem x:Name="menuViewAbonement" Header="Абонементы" Click="menuViewAbonement_Click"/>
                <MenuItem x:Name="menuViewClient" Header="Клиенты" Click="menuViewClient_Click"/>
                <MenuItem x:Name="menuViewContract" Header="Контракты" Click="menuViewContract_Click"/>
                <MenuItem x:Name="menuViewCoach" Header="Тренеры" Click="menuViewCoach_Click"/>
                <MenuItem x:Name="menuViewService" Header="Услуги" Click="menuViewService_Click"/>
            </MenuItem>
            <MenuItem Header="Настройки" ToolTip="Настройки">
                <MenuItem Header="Сменить пользователя">
                    <MenuItem x:Name="menuSettingChangeUserIsAdmin" Header="Администратор" IsCheckable="True" Checked="menuSettingChangeUserIsAdmin_Checked" Unchecked="menuSettingChangeUserIsAdmin_Unchecked"/>
                    <MenuItem x:Name="menuSettingChangeUserIsUser" Header="Пользователь" IsCheckable="True" Checked="menuSettingChangeUserIsUser_Checked" Unchecked="menuSettingChangeUserIsUser_Unchecked"/>
                </MenuItem>
                <MenuItem x:Name="menuSettingChangePassword" Header="Сменить пароль" Click="menuSettingChangePassword_Click"/>
                <Separator/>
                <MenuItem x:Name="menuSettingsAddPost" Header="Добавить должность" Click="menuSettingsAddPost_Click"/>
            </MenuItem>
            <MenuItem Header="Помощь" ToolTip="Помощь">
                <MenuItem x:Name="menuHelpSpravkaButton" Header="Справка" Click="menuHelpSpravkaButton_Click"/>
                <Separator/>
                <MenuItem x:Name="menuAbout" Header="О программе" Click="menuAbout_Click"/>
            </MenuItem>
            <MenuItem x:Name="menuExit" Header="Выход" ToolTip="Выход" Click="menuExit_Click"/>
        </Menu>
        <Label x:Name="label" Content="Клиент" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="clientComboBox" HorizontalAlignment="Left" Margin="63,44,0,0" VerticalAlignment="Top" Width="275" IsEditable="True" MaxWidth="275" ToolTip="Фамилия клиента" RenderTransformOrigin="0.5,0.5" Loaded="clientComboBox_Loaded" SelectionChanged="clientComboBox_SelectionChanged"/>
        <Label x:Name="label1" Content="Дата" HorizontalAlignment="Left" Margin="401,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.343,-0.308"/>
        <DatePicker x:Name="dateBeginDatePicker" HorizontalAlignment="Left" Margin="442,44,0,0" VerticalAlignment="Top" IsTodayHighlighted="True" MaxWidth="120" Width="120" ToolTip="Дата"/>
        <DataGrid x:Name="servicePositionDataGrid" Margin="11,235,9,182" ItemsSource="{Binding}" AutoGenerateColumns="False" CanUserResizeRows="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding title}" Header="Название услуги" />
                <DataGridTextColumn Binding="{Binding date_end}" Header="Дата окончания абонемента" />
                <DataGridTextColumn Binding="{Binding Path=count}" Header="Колическтво занятий" />
                <DataGridTextColumn Binding="{Binding Path=price}" Header="Цена за 1 занятие" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="addMain_MenuButton" Content="Добавить" HorizontalAlignment="Left" Margin="14,0,0,19" Width="75" RenderTransformOrigin="-0.053,0.75" Click="addButton_Click" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="saveMain_MenuButton" Content="Сохранить" HorizontalAlignment="Left" Margin="94,0,0,19" VerticalAlignment="Bottom" Width="75" Click="saveMain_MenuButton_Click"/>
        <Button x:Name="deleteMain_MenuButton" Content="Удалить" HorizontalAlignment="Left" Margin="174,0,0,19" VerticalAlignment="Bottom" Width="75" Click="deleteMain_MenuButton_Click"/>
        <Button x:Name="printButton" Content="Печать" HorizontalAlignment="Left" Margin="254,0,0,19" VerticalAlignment="Bottom" Width="75"/>
        <ComboBox x:Name="serviceTitleComboBox" HorizontalAlignment="Left" Margin="335,100,0,0" VerticalAlignment="Top" Width="227" IsEditable="True" SelectionChanged="serviceTitleComboBox_SelectionChanged"/>
        <Label x:Name="label2" Content="Название услуги" HorizontalAlignment="Left" Margin="229,97,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addServiceToAbonementButton" Content="+" HorizontalAlignment="Left" Margin="466,209,0,0" VerticalAlignment="Top" Width="33" Height="24" Click="addServiceToAbonementButton_Click"/>
        <Button x:Name="deleteServiceFromAbonementButton" Content="-" HorizontalAlignment="Left" Margin="501,209,0,0" VerticalAlignment="Top" Width="32" Height="24" Click="deleteServiceFromAbonementButton_Click"/>
        <Button x:Name="saveServiceOnAbonementButton" Content="ОК" HorizontalAlignment="Left" Margin="535,209,0,0" VerticalAlignment="Top" Width="31" Height="24" Click="saveServiceOnAbonementButton_Click"/>
        <Label x:Name="label3" Content="Количество занятий" HorizontalAlignment="Left" Margin="209,129,0,0" VerticalAlignment="Top"/>
        <Label x:Name="roomNumLabel" Content="№ комнаты" HorizontalAlignment="Left" Margin="254,162,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="roomNumTextBox" HorizontalAlignment="Left" Height="23" Margin="336,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="coachLabel" Content="Тренер" HorizontalAlignment="Left" Margin="279,162,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.7,0.615"/>
        <ComboBox x:Name="coachComboBox" HorizontalAlignment="Left" Margin="336,165,0,0" VerticalAlignment="Top" Width="226" IsEditable="True" SelectionChanged="coachComboBox_SelectionChanged"/>
        <Label x:Name="label4" Content="Срок действия, до" HorizontalAlignment="Left" Margin="11,419,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dateendDatePicker" HorizontalAlignment="Left" Margin="126,421,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday"/>
        <Label x:Name="label5" Content="Доп. стоимость" HorizontalAlignment="Left" Margin="346,421,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="additionalPaymentTextBox" HorizontalAlignment="Left" Height="23" Margin="446,422,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="generalSumTextBox" HorizontalAlignment="Left" Height="23" Margin="446,468,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label6" Content="Общая сумма" HorizontalAlignment="Left" Margin="350,468,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="serviceTypeComboBox" HorizontalAlignment="Left" Margin="26,133,0,0" VerticalAlignment="Top" Width="120" Loaded="serviceTypeComboBox_Loaded" SelectionChanged="serviceTypeComboBox_SelectionChanged"/>
        <Label x:Name="label7" Content="Тип услуги" HorizontalAlignment="Left" Margin="26,103,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="countTimesServiceComboBox" HorizontalAlignment="Left" Margin="336,133,0,0" VerticalAlignment="Top" Width="57" Loaded="countTimesServiceComboBox_Loaded"/>
        <WrapPanel HorizontalAlignment="Left" Height="100" Margin="84,162,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
